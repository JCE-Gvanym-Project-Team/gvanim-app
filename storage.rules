rules_version="2";
service firebase.storage {
  match /b/{bucket}/o {
    match /CandidatesFiles/{id}/cv/{document=**} {
      allow read, write: if request.auth != null;
    	allow create: if resource == null;
    }
    match /CandidatesFiles/{id}/rec/{document=**} {
      allow read, write: if request.auth != null;
      allow create: if resource == null || list(/CandidatesFiles/id/rec).size() < 3;
    }
  }
}